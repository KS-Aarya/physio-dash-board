# Firebase Configuration
# Copy this file to .env.local and fill in your values
# Note: Client-side Firebase config is hardcoded in lib/firebase.ts
# This file is for server-side Firebase Admin SDK configuration

# Firebase Project ID (used by Admin SDK)
# This should match the projectId in lib/firebase.ts
NEXT_PUBLIC_FIREBASE_PROJECT_ID=centerforsportsandscience

# Firebase Admin SDK Configuration
# Option 1: Service account key as JSON string (recommended for deployment)
# Get this from Firebase Console → Project Settings → Service Accounts → Generate new private key
# Copy the entire JSON content as a single-line string (keep the single quotes)
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"centerforsportsandscience","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}'

# Option 2: Path to service account JSON file (recommended for local development)
# Download the service account key from Firebase Console and save it as firebase-service-account.json
# Then uncomment the line below:
# GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Database ID
# The database ID 'css-2025' is hardcoded in lib/firebase.ts and lib/firebaseAdmin.ts
# Update both files if you need to change the database ID

# Other Services (Optional)
# Resend Email Service
# RESEND_API_KEY=your_resend_api_key

# Twilio SMS & WhatsApp
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# SENTRY_ORG=your_sentry_org
# SENTRY_PROJECT=your_sentry_project
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

